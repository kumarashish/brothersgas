<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
android:background="@color/white"       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary">

            <Button
                android:layout_alignParentLeft="true"
                android:id="@+id/back_button"
                android:tint="@color/white"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Contracts"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
            <Button
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_search_category_default"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <ProgressBar
            android:visibility="gone"
            android:layout_width="50dp"
            android:id="@+id/progressBar"
            android:layout_height="50dp"
            android:layout_below="@+id/pass_RL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40.0dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimary"
            />
        <LinearLayout
            android:id="@+id/contentView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/geeen_rectangle"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <Spinner
               android:layout_margin="5dp"

                android:id="@+id/contract_type"

                android:entries="@array/contract_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </LinearLayout>


            <ListView
                android:background="@color/white"

                android:dividerHeight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>