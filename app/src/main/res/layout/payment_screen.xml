<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary">

            <Button
                android:layout_alignParentLeft="true"
                android:id="@+id/back_button"

                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/back" />

            <TextView
                android:fontFamily="@font/fontnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create Payment"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </RelativeLayout>
        <ProgressBar
            android:visibility="gone"
            android:layout_width="50dp"
            android:id="@+id/progressBar"
            android:layout_height="50dp"
            android:layout_below="@+id/pass_RL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40.0dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimary"/>
        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/light_grey_box"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <View
                                android:background="@drawable/green_column"
                                android:layout_width="10dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                           <LinearLayout
                               android:layout_centerVertical="true"
                               android:layout_marginRight="20dp"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                            <TextView
android:id="@+id/customer_number"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/grey"
                                android:text=" Invoice number :"
                                android:fontFamily="@font/light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/md_gray_light"
                                android:text=""
                                android:id="@+id/invoice_number"
                                android:fontFamily="@font/aller_rg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                           </LinearLayout>



                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <RadioGroup
                           android:id="@+id/mode"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/cheque"
                                android:text="Cheque"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:id="@+id/cash"
                                android:fontFamily="@font/fontnew"
                                android:text="Cash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RadioGroup>
                       <LinearLayout
                           android:id="@+id/cheaqueNumberView"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="40dp">
                           <TextView
                               android:fontFamily="@font/fontnew"
                               android:text="Cheque Number : "
                               android:layout_gravity="center_vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                           <View
                               android:layout_width="10dp"
                               android:layout_height="match_parent"/>
                           <EditText
                               android:id="@+id/cheaquenumber"
                               android:gravity="center_vertical"
                               android:imeOptions="actionNext"
                               android:paddingLeft="10dp"
                               android:paddingRight="10dp"
                               android:layout_gravity="center_vertical"
                               android:background="@drawable/light_grey_box"
                               android:layout_width="match_parent"
                               android:layout_height="30dp" />
                       </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cheaqueDateView"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/fontnew"
                                android:text="Cheque Date: "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent"/>
                            <EditText
                                android:id="@+id/date"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/fontnew"
                                android:background="@drawable/light_grey_box"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/fontnew"
                                android:text="Amount : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent"/>
                            <RelativeLayout
                                android:background="@drawable/light_grey_box"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <EditText
                                android:layout_marginRight="70dp"
                                android:paddingLeft="10dp"
                                android:layout_centerVertical="true"
                                android:id="@+id/amount_value"

                                android:imeOptions="actionNext"
                                android:textSize="14dp"
                                android:singleLine="true"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/fontnew"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                                <EditText
                                    android:background="@android:color/transparent"

                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/amount_unit"
                                    android:enabled="false"
                                    android:focusable="false"
                                      android:textSize="12dp"

                                    android:paddingRight="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/fontnew"

                                    android:layout_width="50dp"
                                    android:layout_height="30dp" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/bankView"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView

                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/fontnew"
                                android:text="Bank : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent"/>
                            <EditText
                               android:id="@+id/bank"
                                android:gravity="center_vertical"
                                android:imeOptions="actionDone"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/fontnew"
                                android:background="@drawable/light_grey_box"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                        <ProgressBar
                            android:visibility="gone"
                            android:layout_width="50dp"
                            android:id="@+id/progressBar2"
                            android:layout_height="50dp"
                            android:layout_below="@+id/pass_RL"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/colorPrimary"/>
                        <RelativeLayout

                            android:id="@+id/footer"

                            android:orientation="horizontal"

                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <Button
                                 android:layout_gravity="center"
                                android:id="@+id/submit"
                                android:padding="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/light"
                                android:background="@drawable/light_green_button"
                                android:text="Submit"
                                android:textColor="@color/white"
                               android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="150dp"

                                android:layout_height="match_parent"  />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/footer"/>
            </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>